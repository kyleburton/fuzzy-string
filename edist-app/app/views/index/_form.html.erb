<% form_tag( { :action => "edist" }, :method => :get) { -%>
  Left String:  <input id="left_string" type="text" name="left_string" value="<%= @left_string %>"/>  <br/>
  Right String: <input id="right_string" type="text" name="right_string" value="<%= @right_string %>"/>  <br/>
  <%= submit_tag "compare" %>
<% } -%>

<h2>Examples:</h2>

<ul>
  <%
    left = "De Morgan"
    ["De Morgan", "D'Morgun", "D'Morgun", "Demorgyn", "De Murgen", "Dy Moregan", 
     "Dy Murgan", "Da Murgan", "Da Morgan", "Da Myrgn" ].each {|right|
  %>
  <li><%= link_to "#{left} vs #{right}", :left_string=>left, :right_string=>right  %>
  <% } %>
</ul>
